<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailsActivity">

    <!-- A RecyclerView with some commonly used attributes -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/my_recycler_view"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

<!--    This is the section where the title will be shown-->
    <TextView
        android:id="@+id/original_title"
        android:layout_width="fill_parent"
        android:paddingLeft="10dp"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:textSize="20sp"

        android:textColor="#1551c3"
        android:textStyle="bold"/>
<!--  this is where the release date text will be shown-->
    <TextView
        android:id="@+id/release_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"

        android:textColor="#5d5d5d"
        android:paddingBottom="5dp" />
<!--    this is where the image of the movie will show up-->
    <ImageView
        android:layout_width="wrap_content"
        android:paddingLeft="10dp"

        android:id="@+id/poster_path"
        android:layout_height="wrap_content"
        android:textColor="#5d5d5d"
        android:paddingBottom="5dp" />
<!--    this is where the vote average will show up-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:id="@+id/vote_average"

        />

<!--    this is where the plot synopsis will show up, will parse "overview"-->
    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/overview"
        android:paddingLeft="10dp"
        android:layout_height="wrap_content"
        android:textColor="#5d5d5d"
        android:paddingBottom="5dp" />


</LinearLayout>